<%= form_for @author do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
    <%= f.label :image %>
    <%= f.url_field :image %>
  </div>
  <div>
    <%= f.label :dob %>
    <%= f.date_field :dob %>
  </div>
  <%= f.submit "Create Author" %>
<% end %>